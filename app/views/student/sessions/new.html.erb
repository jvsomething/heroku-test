<%= stylesheet_link_tag 'common/sign_form' %>
<div class="row text-center">
  <%= link_to root_path, class:'navbar-brand center-div' do %>
      <h1>ESL Booking System</h1>
  <% end %>
</div>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %> center-div"><%= message %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
<% end %>

<div class="panel panel-default center-div">
  <div class="panel-heading">
    <h3 class="panel-title">Log in</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div class="pull-right">
                <%= link_to 'Forgot your password?', new_password_path(resource_name), id:'a-forgot' %>
              </div>
          <% end -%>
          <%= f.password_field :password, autocomplete: 'off', class:'form-control' %>
        </div>

        <div class="actions text-center">
          <%= f.submit 'Log in',class:'btn btn-custom form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            </div>
        <% end -%>

        <div class="form-divider"><h5>New to ESL Booking System?</h5></div>

    <% end %>
    <%= link_to 'Create an account', new_registration_path(resource_name),class:'btn btn-default form-control' %>
  </div>
</div>